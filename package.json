    "mocha": "^1.20.1",
    "moment": "^2.8.3",
    "request": "^2.44.0",
    "request-promise": "^0.3.2",
    "semver": "^2.3.1",
    "tsort": "0.0.1",
    "uglify-js": "^2.4.14",
    "useragent": "^2.0.8"
  },
  "devDependencies": {
    "batch": "^0.5.1",
    "grunt": "~0.4.0",
    "grunt-cli": "~0.1.6",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-mocha": "^0.4.11",
    "grunt-simple-mocha": "^0.4.0",
    "sauce-tunnel": "^2.1.0",
    "wd": "^0.3.8"
  },
